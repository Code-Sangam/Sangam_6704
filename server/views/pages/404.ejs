<section class="error-page">
    <div class="container">
        <div class="error-content">
            <div class="error-illustration">
                <div class="error-number">404</div>
                <div class="error-icon">
                    <i class="fas fa-search"></i>
                </div>
            </div>
            
            <div class="error-text">
                <h1 class="error-title">Page Not Found</h1>
                <p class="error-description">
                    <%= message || "The page you are looking for doesn't exist or has been moved." %>
                </p>
                
                <div class="error-suggestions">
                    <h3>Here are some helpful links:</h3>
                    <ul class="suggestion-list">
                        <li><a href="/">Go to Homepage</a></li>
                        <% if (isAuthenticated) { %>
                            <li><a href="/profile">View Your Profile</a></li>
                            <li><a href="/chat">Go to Chat</a></li>
                        <% } else { %>
                            <li><a href="/auth/login">Login to Your Account</a></li>
                            <li><a href="/auth/register">Create New Account</a></li>
                        <% } %>
                        <li><a href="/about">Learn About Us</a></li>
                        <li><a href="/contact">Contact Support</a></li>
                    </ul>
                </div>
                
                <div class="error-actions">
                    <button onclick="history.back()" class="btn btn-outline">
                        <i class="fas fa-arrow-left"></i>
                        Go Back
                    </button>
                    
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-home"></i>
                        Home Page
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.error-page {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 0;
}

.error-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
}

.error-illustration {
    position: relative;
    margin-bottom: 2rem;
}

.error-number {
    font-size: 8rem;
    font-weight: bold;
    color: var(--primary-color);
    opacity: 0.1;
    line-height: 1;
}

.error-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 3rem;
    color: var(--primary-color);
}

.error-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
}

.error-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    line-height: 1.6;
}

.error-suggestions {
    margin: 2rem 0;
    text-align: left;
    background: var(--background-secondary);
    padding: 1.5rem;
    border-radius: 8px;
    border-left: 4px solid var(--primary-color);
}

.error-suggestions h3 {
    margin-bottom: 1rem;
    color: var(--text-primary);
    font-size: 1.1rem;
}

.suggestion-list {
    list-style: none;
    padding: 0;
}

.suggestion-list li {
    margin-bottom: 0.5rem;
}

.suggestion-list a {
    color: var(--primary-color);
    text-decoration: none;
    display: flex;
    align-items: center;
    padding: 0.5rem 0;
    transition: color 0.3s ease;
}

.suggestion-list a:hover {
    color: var(--primary-hover);
    text-decoration: underline;
}

.suggestion-list a::before {
    content: 'â†’';
    margin-right: 0.5rem;
    font-weight: bold;
}

.error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 2rem;
}

@media (max-width: 768px) {
    .error-number {
        font-size: 6rem;
    }
    
    .error-icon {
        font-size: 2rem;
    }
    
    .error-title {
        font-size: 2rem;
    }
    
    .error-actions {
        flex-direction: column;
        align-items: center;
    }
    
    .error-actions .btn {
        width: 100%;
        max-width: 200px;
    }
}
</style>