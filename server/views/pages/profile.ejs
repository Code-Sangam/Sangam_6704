<!-- Profile Page -->
<section class="profile-page">
    <div class="container">
        <div class="profile-layout">
            <!-- Profile Header -->
            <div class="profile-header">
                <div class="profile-cover">
                    <div class="cover-overlay"></div>
                </div>
                
                <div class="profile-info">
                    <div class="profile-avatar-section">
                        <div class="profile-avatar">
                            <% if (profile && profile.profile_picture) { %>
                                <img src="<%= profile.profile_picture %>" alt="Profile Picture" class="avatar-image">
                            <% } else { %>
                                <div class="avatar-placeholder">
                                    <%= profile ? profile.first_name.charAt(0).toUpperCase() : 'U' %><%= profile ? profile.last_name.charAt(0).toUpperCase() : '' %>
                                </div>
                            <% } %>
                            
                            <% if (isOwnProfile) { %>
                                <button class="avatar-edit-btn" onclick="openImageUpload()">
                                    <i class="fas fa-camera"></i>
                                </button>
                            <% } %>
                        </div>
                        
                        <div class="profile-status">
                            <div class="status-indicator online"></div>
                            <span class="status-text">Online</span>
                        </div>
                    </div>
                    
                    <div class="profile-details">
                        <div class="profile-name">
                            <h1><%= profile ? profile.getDisplayName() : 'User Profile' %></h1>
                            <div class="profile-badges">
                                <span class="badge badge-<%= profileUser.role %>">
                                    <i class="fas fa-<%= profileUser.role === 'student' ? 'graduation-cap' : profileUser.role === 'alumni' ? 'user-graduate' : 'chalkboard-teacher' %>"></i>
                                    <%= profileUser.role.charAt(0).toUpperCase() + profileUser.role.slice(1) %>
                                </span>
                                
                                <% if (profileUser.email_verified) { %>
                                    <span class="badge badge-success">
                                        <i class="fas fa-check-circle"></i>
                                        Verified
                                    </span>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="profile-meta">
                            <div class="meta-item">
                                <i class="fas fa-envelope"></i>
                                <span>
                                    <% if (profile && (profile.show_email || isOwnProfile)) { %>
                                        <%= profileUser.email %>
                                    <% } else { %>
                                        <span class="private-info">Email Private</span>
                                    <% } %>
                                </span>
                            </div>
                            
                            <div class="meta-item">
                                <i class="fas fa-calendar-alt"></i>
                                <span>Joined <%= new Date(profileUser.created_at).toLocaleDateString('en-US', { month: 'long', year: 'numeric' }) %></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="profile-actions">
                        <% if (isOwnProfile) { %>
                            <a href="/profile/edit" class="btn btn-primary">
                                <i class="fas fa-edit"></i>
                                Edit Profile
                            </a>
                            
                            <a href="/profile/settings" class="btn btn-outline">
                                <i class="fas fa-cog"></i>
                                Settings
                            </a>
                        <% } else { %>
                            <button class="btn btn-primary" onclick="startChat('<%= profileUser.id %>')">
                                <i class="fas fa-comments"></i>
                                Send Message
                            </button>
                            
                            <button class="btn btn-outline" onclick="toggleConnection('<%= profileUser.id %>')">
                                <i class="fas fa-user-plus"></i>
                                Connect
                            </button>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <!-- Profile Content -->
            <div class="profile-content">
                <div class="profile-main">
                    <!-- About Section -->
                    <div class="profile-section">
                        <div class="section-header">
                            <h2 class="section-title">
                                <i class="fas fa-user"></i>
                                About
                            </h2>
                            <% if (isOwnProfile) { %>
                                <button class="btn btn-small btn-outline" onclick="editSection('about')">
                                    <i class="fas fa-edit"></i>
                                    Edit
                                </button>
                            <% } %>
                        </div>
                        
                        <div class="section-content">
                            <div class="about-content">
                                <p class="bio-text">
                                    <%= profile && profile.bio ? profile.bio : 'No bio available yet.' %>
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Professional Information -->
                    <% if (profileUser.role === 'alumni' || profileUser.role === 'faculty') { %>
