                                        <div class="info-label">
                                            <i class="fas fa-medal"></i>
                                            Degree
                                        </div>
                                        <div class="info-value"><%= profile && profile.degree ? profile.degree.charAt(0).toUpperCase() + profile.degree.slice(1) : 'Not specified' %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    
                    <!-- Skills & Interests -->
