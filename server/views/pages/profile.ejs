                                            <% if (profile.show_phone || isOwnProfile) { %>
                                                <%= profile.phone %>
                                            <% } else { %>
                                                <span class="private-info">Private</span>
                                            <% } %>
                                        </span>
                                    </div>
                                </div>
                            <% } %>
                            
