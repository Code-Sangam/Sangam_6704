                            <div class="section-header">
                                <h2 class="section-title">
                                    <i class="fas fa-briefcase"></i>
                                    Professional Information
                                </h2>
                                <% if (isOwnProfile) { %>
                                    <button class="btn btn-small btn-outline" onclick="editSection('professional')">
                                        <i class="fas fa-edit"></i>
                                        Edit
                                    </button>
                                <% } %>
                            </div>
                            
                            <div class="section-content">
                                <div class="info-grid">
                                    <div class="info-item">
                                        <div class="info-label">
                                            <i class="fas fa-building"></i>
                                            Company
                                        </div>
                                        <div class="info-value"><%= profile && profile.company ? profile.company : 'Not specified' %></div>
                                    </div>
                                    
                                    <div class="info-item">
                                        <div class="info-label">
                                            <i class="fas fa-user-tie"></i>
                                            Position
                                        </div>
                                        <div class="info-value"><%= profile && profile.position ? profile.position : 'Not specified' %></div>
                                    </div>
                                    
                                    <div class="info-item">
                                        <div class="info-label">
                                            <i class="fas fa-chart-line"></i>
                                            Experience
                                        </div>
                                        <div class="info-value"><%= profile && profile.experience_years ? profile.experience_years + ' years' : 'Not specified' %></div>
                                    </div>
                                    
                                    <div class="info-item">
                                        <div class="info-label">
                                            <i class="fas fa-industry"></i>
                                            Industry
                                        </div>
                                        <div class="info-value"><%= profile && profile.industry ? profile.industry : 'Not specified' %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    
                    <!-- Educational Information -->
                    <% if (profileUser.role === 'student' || profileUser.role === 'alumni') { %>
