                                    <div class="info-item">
                                        <div class="info-label">
                                            <i class="fas fa-university"></i>
                                            University
                                        </div>
                                        <div class="info-value"><%= profile && profile.university ? profile.university : 'Not specified' %></div>
                                    </div>
                                    
