                                        <div class="info-label">
                                            <i class="fas fa-calendar"></i>
                                            <%= profileUser.role === 'student' ? 'Expected Graduation' : 'Graduation Year' %>
                                        </div>
                                        <div class="info-value"><%= profile && profile.graduation_year ? profile.graduation_year : 'Not specified' %></div>
                                    </div>
                                    
